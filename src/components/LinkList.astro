---
// src/components/LinkList.astro
interface Link {
  href: string;
  name: string;
  iconClass: string;
}
interface Props {
  links: Link[];
}
const { links } = Astro.props;
---
<ul class="links">
  {links.map((link) => (
    <li>
      <a href={link.href} target="_blank" rel="noopener noreferrer">
        <i class:list={[link.iconClass, "fa-fw"]}></i>
        {link.name}
      </a>
    </li>
  ))}
</ul>

<style>
  .links {
    list-style: none;
    padding: 0;
    text-align: center;
  }
  .links li a {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(221, 255, 244, 0.7);
    color: #194b3f;
    text-decoration: none;
    padding: 12px 15px;
    margin-bottom: 15px;
    border: 2px dashed rgba(226, 133, 184, 0.7);
    border-radius: 8px;
    font-size: 1rem;
    transition: transform 0.2s ease-in-out, background-color 0.2s ease-in-out;
  }
  .links li a:hover {
    transform: scale(1.05);
    background-color: rgba(217, 161, 192, 0.7);
    color: #594157;
  }
  /* Style for the Font Awesome icon */
  .links li a i {
    color: #194b3f;
    font-size: 1.25rem;
    margin-right: 10px;
    transition: color 0.2s ease-in-out;
  }
  /* Change icon color on link hover */
  .links li a:hover i {
    color: #594157;
  }
</style>