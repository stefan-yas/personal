---
// src/components/Header.astro
interface Props {
    title: string;
}
const { title } = Astro.props;
---
<h1>{title}</h1>

<style>
  h1 {
    font-weight: 400;
    font-size: 2.5rem;
    text-align: center;
    padding: 10px 20px;
    margin-bottom: 25px; /* Keeps the space below the header */
    background-color: rgba(217, 161, 192, 0.7);
    color: #594157;
    white-space: nowrap;
    border-radius: 8px; /* Matching the links' border-radius */
  }

  /* Responsive adjustment for mobile */
  @media (max-width: 600px) {
    h1 {
      font-size: 1.8rem;
    }
  }
</style>